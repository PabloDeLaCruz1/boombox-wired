 <% flash.keys.each do |type| %>
    <div class="flash-<%= type %>">
      <%= flash[type] %>
    </div>
  <% end %>

<h1 class="main-h1">Login</h1>

<div class="container">
<div class="row">
    <form action="/login" method="post" class="col s12" id="reg-form">
      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" name="email"class="validate" required>
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" name="password" class="validate" minlength="6" required>
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <button class="btn btn-large btn-register waves-effect waves-effect2  waves-light deep-orange lighten-3" type="submit" >Login
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
